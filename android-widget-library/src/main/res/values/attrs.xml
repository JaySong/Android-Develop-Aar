<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ClearEditText">
        <attr name="clear_icon" format="reference" />
    </declare-styleable>
    <!--流式布局-->
    <declare-styleable name="FlowLayout">
        <!--水平方向View之间的间隙-->
        <attr name="horizontal_spacing" format="dimension" />
        <!--行之间的间隙-->
        <attr name="vertical_spacing" format="dimension" />
    </declare-styleable>
    <!--圆形ImageView-->
    <declare-styleable name="CircleImageView">
        <!--边框的宽度-->
        <attr name="border_width" format="dimension" />
        <!--边框的颜色-->
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
    <!--选择器ImageView-->
    <declare-styleable name="SelectorImageView">
        <attr name="selector_src" format="reference" />
        <attr name="checked" format="boolean" />
    </declare-styleable>
    <!--SuperRecyclerView-->
    <declare-styleable name="SuperRecyclerView">
        <!--布局管理器类型-->
        <attr name="layout_manager">
            <!--线性方式-->
            <enum name="linear_layout_manager" value="0" />
            <!--风格方式-->
            <enum name="grid_layout_manager" value="1" />
            <!---->
            <enum name="staggered_grid_layout_manager" value="2" />
        </attr>
        <attr name="orientation" >
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="dividerColor" format="color" />
        <attr name="dividerSpace" format="dimension" />
        <attr name="isAutoHeight" format="boolean" /><!--是否自适配高度-->
        <attr name="dividerMargin" format="dimension" />
        <attr name="dividerMarginLeft" format="dimension" />
        <attr name="dividerMarginRight" format="dimension" />
        <attr name="dividerMarginTop" format="dimension" />
        <attr name="dividerMarginBottom" format="dimension" />

        <attr name="span_count" format="integer" />

    </declare-styleable>

    <!--可禁止滑动的ViewPager-->
    <declare-styleable name="CanBanScrollViewPager">
        <attr name="isScroll" format="boolean" />
    </declare-styleable>
    <!--BGA badge view-->
    <declare-styleable name="BGABadgeView">
        <!-- 徽章背景色 -->
        <attr name="badge_bgColor" format="reference|color" />
        <!-- 徽章文本的颜色 -->
        <attr name="badge_textColor" format="reference|color" />
        <!-- 徽章文本字体大小 -->
        <attr name="badge_textSize" format="reference|dimension" />
        <!-- 徽章背景与宿主控件上下边缘间距离 -->
        <attr name="badge_verticalMargin" format="reference|dimension" />
        <!-- 徽章背景与宿主控件左右边缘间距离 -->
        <attr name="badge_horizontalMargin" format="reference|dimension" />
        <!-- 徽章文本边缘与徽章背景边缘间的距离 -->
        <attr name="badge_padding" format="reference|dimension" />
        <!-- 徽章在宿主控件中的位置 -->
        <attr name="badge_gravity" format="enum">
            <enum name="rightTop" value="0" />
            <enum name="rightCenter" value="1" />
            <enum name="rightBottom" value="2" />
        </attr>
        <!-- 是否可以拖拽删除徽章 -->
        <attr name="badge_dragable" format="boolean" />
    </declare-styleable>

    <!--BGA Refresh-->
    <declare-styleable name="BGAMoocStyleRefreshView">
        <attr name="mv_ultimateColor" format="reference|color" />
        <attr name="mv_originalImg" format="reference" />
    </declare-styleable>

    <!--自定义的textview-->
    <declare-styleable name="StrokeTextView">
        <attr name="stroke_color" format="color" /><!--描边的颜色-->
        <attr name="isStrokeDrawable" format="boolean" /><!--是否drawable范围内也搭边-->
        <attr name="isStrokeDrawableLeft" format="boolean" /><!--是否drawableLeft范围内也搭边-->
        <attr name="isStrokeDrawableTop" format="boolean" /><!--是否drawableTop范围内也搭边-->
        <attr name="isStrokeDrawableRight" format="boolean" /><!--是否drawableRight范围内也搭边-->
        <attr name="isStrokeDrawableBottom" format="boolean" /><!--是否drawableBottom范围内也搭边-->
        <attr name="stroke_width" format="dimension" /><!--四周边框粗细-->
        <attr name="strokeLeftWidth" format="dimension"/><!--左边框的粗细-->
        <attr name="strokeTopWidth" format="dimension"/><!--上边框的粗细-->
        <attr name="strokeRightWidth" format="dimension"/><!--右边框的粗细-->
        <attr name="strokeBottomWidth" format="dimension"/><!--下边框的粗细-->
        <attr name="corner_radius" format="dimension"/><!--圆角半径-->
    </declare-styleable>

    <declare-styleable name="BGASwipeItemLayout">
        <attr name="bga_sil_swipeDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="bga_sil_bottomMode" format="enum">
            <enum name="pullOut" value="0" />
            <enum name="layDown" value="1" />
        </attr>
        <attr name="bga_sil_springDistance" format="dimension" />
        <attr name="bga_sil_swipeAble" format="boolean" />
    </declare-styleable>
</resources>